rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/accounts/$(request.auth.uid)).data.role == 'super-admins';
    }

    function isAdmins() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/accounts/$(request.auth.uid)).data.role == 'admins';
    }
    
    // Account rules - more secure version
    match /accounts/{userId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // ReferralNetwork collection rules
    match /referralNetwork/{networkId} {
      allow read, write: if true;
    }

    // Referrals collection rules
    match /referrals/{referralId} {
      allow read, write: if true;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 